{
    "manifestVersion": 5,
    "id": "com.yourcompany.folder-watcher",
    "name": "Folder Watcher",
    "version": "1.0.0",
    "main": "index.html",
    "host": [
        {
            "app": "PP",
            "minVersion": "25.0"
        }
    ],
    "entrypoints": [
        {
            "type": "panel",
            "id": "folderWatcherPanel",
            "label": {
                "default": "Folder Watcher"
            },
            "icons": [
                {
                    "width": 24,
                    "height": 24,
                    "path": "icons/icon.png"
                },
                {
                    "width": 48,
                    "height": 48,
                    "path": "icons/icon@2x.png"
                }
            ],
            "minimumSize": {
                "width": 300,
                "height": 400
            },
            "preferredDockedSize": {
                "width": 350,
                "height": 500
            },
            "preferredFloatingSize": {
                "width": 400,
                "height": 600
            }
        }
    ],
    "requiredPermissions": {
        "localFileSystem": "fullAccess",
        "network": {
            "domains": [
                "ws://127.0.0.1"
            ]
        },
        "launchProcess": {
            "schemes": [
                "file"
            ],
            "extensions": [
                "exe",
                ""
            ]
        }
    }
}
